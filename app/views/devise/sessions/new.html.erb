<div style="text-align: center">
  <div style="display: inline-block; text-align: left; -webkit-text-stroke-width: 0.1px;
  -webkit-text-stroke-color: lightgray; text-shadow: 0.5px 0px gray">
    <h2 style="font-weight: bold">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class=" field">
    <%= f.label :login, 'Email or username', style:"font-size:20px; font-weight: bold;" %><br />
    <%= f.text_field :login, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, style:"font-size:20px; font-weight: bold;" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, style:"font-size:20px; font-weight: bold;" %>
  </div>
  <% end %>
  <div class="btn-group">
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary btn-sm"  %>
    </div>
    <% end %>

    <%= render "devise/shared/links", class:"btn-group" %>
  </div>
</div>
</div>