<div style="text-align: center" >
  <div style="display: inline-block; text-align: left; text-shadow: 1px 1px gray"">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login, 'Email or username', style:"font-size:20px; font-weight: bold;" %><br />
      <%= f.text_field :login, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, style:"font-size:20px; font-weight: bold;" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style:"font-size:20px; font-weight: bold;" %>
    </div>
    <% end %>

    <div class="actions btn-group">
      <%= f.submit "Log in", class: "btn btn-primary btn-sm"  %>
    </div>
    <% end %>

    <%= render "devise/shared/links", class:"btn-group" %>
  </div>
</div>