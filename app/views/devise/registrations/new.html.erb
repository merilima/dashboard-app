<div style="text-align: center">
  <div style="display: inline-block; text-align: left; text-shadow: 0.5px 0.5px gray">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, style:"font-size:20px; font-weight: bold;" %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, style:"font-size:20px; font-weight: bold;" %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, style:"font-size:20px; font-weight: bold;" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, style:"font-size:20px; font-weight: bold;" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="btn-group">
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success btn-sm"  %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>