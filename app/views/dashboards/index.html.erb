<div class="row">
  <div class="col-sm-6">
    <h1>Dashboards</h1>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to 'New Dashboard', new_dashboard_path, class: 'btn btn-secondary' %>
  </div>
</div>

<div data-controller="sort" data-sort-url="/dashboards/:id/move">
  <% current_user.dashboards.order(position: :asc).each do |dashboard| %>
  <div data-id="<%= dashboard.id %>" class="card card-body mb-4">
    <h2><%= dashboard.title %></h2>
    <%= dashboard.description %>
    <div class="text-right">
      <div class="btn-group">
        <%= button_to 'Show', dashboard_path(dashboard), :method => 'get', :class => "btn btn-info btn-sm", id: dom_id(dashboard) %>
        <%= button_to 'Edit', edit_dashboard_path(dashboard), :method => 'get', :class => "btn btn-secondary btn-sm" %>
        <%= button_to 'Delete', dashboard_path(dashboard),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete the dashboard?' },
            :class => "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
  <% end %>
</div>